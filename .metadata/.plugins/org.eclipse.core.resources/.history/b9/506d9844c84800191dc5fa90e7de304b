package com.class9;

public class Task4 {

	public static void main(String[] args) {
		//Print the following pattern:
		//*
		//**
		//***
		//****
		//*****
		//****
		//***
		//**
		//*
		
		for(int a=1;a<7;a++) {
			for(int b=1;b<a;b++) {
				for(int c=6;c>1; c--) {
					for(int d=6;d>c;d--) {
						
					}
					System.out.print("* ");
				}
				System.out.println(" ");
					
				}
					
				}
		
			}
}
		
		
	


