package com.class9;

public class Columns {
// i want to print 
//***** 4 times
	public static void main(String[] args) {
		for (int i = 1; i <= 4; i++) {
			for (int k = 1; k <= 5; k++) {
				System.out.print("*");
			}
			System.out.println();
		}
		for(int b=1;b<=4;b++) {
			for(int c=5;c>=1;c--) {
				System.out.print(c);
			}
			System.out.println();
		}
		
		// make a triangle 
		//*
		//**
		//***
		//****
					
//		for(int d=0; d<5;d++) {
//			for (int e=0;e<d;e++) {
//				System.out.print("* ");
//			}
//			System.out.println();
//		}
		for(int f=0;f<4;f++) {
			
			for(int g=0;g<5;g++) {
				if(f==1&&g==1) {
					System.out.print("  ");
					continue;
				}
				if(f==1&&g==2) {
					System.out.print("  ");
					continue;
				}
				if(f==1&&g==3) {
					System.out.print("  ");
					continue;
				}
				if(f==2&&g==1) {
					System.out.print("  ");
					continue;
				}
				if(f==2&&g==2) {
					System.out.print("  ");
					continue;
				}
				if(f==1&&g==3) {
					System.out.print("  ");
					continue;
				}
				if(f==1&&g==4) {
					System.out.print("  ");
					continue;
				}
					System.out.print("* ");
				}
				System.out.println();
			}
		}
	}
	

