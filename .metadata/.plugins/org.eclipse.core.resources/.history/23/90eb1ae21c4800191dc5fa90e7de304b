package com.class9;

public class Task4 {

	public static void main(String[] args) {
		//Print the following pattern:
		//*
		//**
		//***
		//****
		//*****
		//****
		//***
		//**
		//*
		
		for(int a=1;a<10;a++) {
			for(int b=1;b<6;b++) {
				if(a==1 && b==5) {
					System.out.print("* ");
				}else {
					System.out.print(" ");
				}
				
			}
			System.out.println();
		}
		
	}

}
